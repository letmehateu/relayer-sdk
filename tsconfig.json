{
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "src",
    "outDir": "bundle",
    "declaration": false,
    "target": "es5",
    "lib": ["DOM", "WebWorker"],
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "src/*.test.ts"]
}
